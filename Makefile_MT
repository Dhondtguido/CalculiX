DIR=../SPOOLES.2.2

CFLAGS = -Wall -g -fopenmp -I $(DIR) -DARCH="Linux" -DSPOOLES -DARPACK -DMATRIXSTORAGE -DUSE_MT=1
FFLAGS = -Wall -g -fopenmp --std=legacy

CC=cc
FC=gfortran

.c.o :
	$(CC) $(CFLAGS) -c $<
.f.o :
	$(FC) $(FFLAGS) -c $<

include Makefile.inc

SCCXMAIN = CalculiX.c

OCCXF = $(SCCXF:.f=.o)
OCCXC = $(SCCXC:.c=.o)
OCCXMAIN = $(SCCXMAIN:.c=.o)

LIBS = \
       $(DIR)/MT/src/spoolesMT.a \
       $(DIR)/spooles.a \
       ../ARPACK/libarpack_INTEL.a \
       -lpthread -lm

CalculiX_MT: $(OCCXMAIN) CalculiX_MT.a $(LIBS)
	./date.pl; $(CC) $(CFLAGS) -c $(SCCXMAIN); $(FC) -fopenmp -Wall -g -o $@ $(OCCXMAIN) CalculiX_MT.a $(LIBS)

CalculiX_MT.a: $(OCCXF) $(OCCXC)
	ar vr $@ $?
